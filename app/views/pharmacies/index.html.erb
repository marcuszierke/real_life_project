<div class="container">
  <%- model_class = Pharmacy -%>
  <div class="container-style">
    <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:id) %></th>
        <th><%= model_class.human_attribute_name(:name) %></th>
        <th><%= model_class.human_attribute_name(:street) %></th>
        <th><%= model_class.human_attribute_name(:zip) %></th>
        <th><%= model_class.human_attribute_name(:city) %></th>
        <th><%= model_class.human_attribute_name(:phone) %></th>
        <th><%= model_class.human_attribute_name(:fax) %></th>
        <th><%= model_class.human_attribute_name(:email) %></th>
        <th><%=t '.actions', :default => t("helpers.actions") %></th>
      </tr>
    </thead>
    <tbody>
      <% @pharmacies.each do |pharmacy| %>
        <tr>
          <td><%= link_to pharmacy.id, pharmacy_path(pharmacy) %></td>
          <td><%= pharmacy.name %></td>
          <td><%= pharmacy.street %></td>
          <td><%= pharmacy.zip %></td>
          <td><%= pharmacy.city %></td>
          <td><%= pharmacy.phone %></td>
          <td><%= pharmacy.fax %></td>
          <td><%= pharmacy.email %></td>
          <td>
            <%= link_to t('.show', :default => t("helpers.links.show")),
                        pharmacy_path(pharmacy), :class => 'btn btn-info btn-s' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to t('.new', :default => t("helpers.links.new")),
              new_pharmacy_path,
              :class => 'btn btn-info' %>
</div>